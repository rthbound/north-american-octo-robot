@keyframes request_ip {
  <% colors = Digest::MD5.hexdigest("#{request.ip}#{request.uuid}").split(//).each_cons(6).map(&:join) %>
  <% colors.each_with_index do |color,i| %>
    <%= ((i*100)/colors.length).to_s %>% { background-color: <%= "##{color}" %>; }
  <% end %>
}

@keyframes request_remote_ip {
  <% colors = Digest::MD5.hexdigest("#{request.remote_ip}#{request.uuid}").split(//).each_cons(6).map(&:join) %>
  <% colors.each_with_index do |color,i| %>
    <%= ((i*100)/colors.length).to_s %>% { background-color: <%= "##{color}" %>; }
  <% end %>
}

$primary:                       <%= "##{request.uuid.first(6)}" %>;
$greetings-background-color:    $primary;
$good-tidings-background-color: $primary;
$salutations-background-color:  $primary;
